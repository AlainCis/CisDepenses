<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_fenetre_principale"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context="com.example.alaincis.cisdepenses.FenetrePrincipale">

    <ListView
        android:layout_marginLeft="5dp"
        android:id="@+id/listedepenses"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:animateLayoutChanges="true"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/nouvdep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/listedepenses"
        android:background="@drawable/bg_btn"
        android:backgroundTintMode="add"
        app:rippleColor="@color/colorPrimary"
        app:fabSize="normal"
        android:layout_margin="16dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp">
        <Button
            android:id="@+id/ic_home"
            android:drawableTop="@mipmap/ic_hoe"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:textColor="@color/colorPrimary"/>
        <Button
            android:id="@+id/today"
            android:drawableTop="@mipmap/ic_today"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20dp"/>
        <Button
            android:drawableTop="@mipmap/ic_urg"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20dp"/>
        <Button
            android:drawableTop="@mipmap/ic_okay"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

</RelativeLayout>
